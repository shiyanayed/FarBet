# ============================================
# FARCASTER PREDICTION MARKET - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# Never commit .env to Git!

# ============================================
# SERVER CONFIGURATION
# ============================================
FLASK_ENV=development
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-key-here-minimum-32-characters
HOST=0.0.0.0
PORT=5000

# ============================================
# DATABASE CONFIGURATION
# ============================================
# For Development (SQLite)
# DATABASE_URL=sqlite:///prediction_market.db

# For Production (PostgreSQL) - Recommended
# DATABASE_URL=postgresql://user:password@localhost:5432/prediction_market

# For Production (MySQL)
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/prediction_market

# For Heroku (auto-generated)
# DATABASE_URL=postgresql://...

DATABASE_URL=sqlite:///prediction_market.db

# ============================================
# FARCASTER CONFIGURATION
# ============================================
# Get your API key from: https://app.neynar.com
FARCASTER_HUB_URL=https://hub.farcaster.builders
NEYNAR_API_KEY=your-neynar-api-key-here

# For frame functionality
FARCASTER_SIGNER_UUID=your-signer-uuid-here

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================
# Choose your network RPC endpoint

# Base (Recommended for Farcaster)
RPC_ENDPOINT=https://base.llamarpc.com

# Alternative: Ethereum Mainnet
# RPC_ENDPOINT=https://eth.llamarpc.com

# Alternative: Arbitrum
# RPC_ENDPOINT=https://arbitrum.llamarpc.com

# Alternative: Use your own provider (Alchemy, Infura, etc)
# RPC_ENDPOINT=https://base-mainnet.g.alchemy.com/v2/your-key

# ============================================
# WALLET CONFIGURATION
# ============================================
# Treasure wallet address (fees collected here)
TREASURE_WALLET=0xf2B6664bF4d507C8889f07174A6A6dE53CEFD7fC

# Your private key (for sending fees)
# WARNING: Never commit this to Git!
# WARNING: Never share this key!
# Use environment variables or secrets management in production
WALLET_PRIVATE_KEY=0xYourPrivateKeyHere

# ============================================
# FEE CONFIGURATION
# ============================================
# Base fee charged per bet (in USD)
BASE_FEE=0.2

# Win fee charged on withdrawal (percentage)
WIN_FEE_PERCENTAGE=1.5

# ============================================
# API CONFIGURATION
# ============================================
API_BASE_URL=http://localhost:5000/api
FRAME_URL=http://localhost:5000/frame

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=INFO

# Sentry error tracking (optional)
# Get key from: https://sentry.io
SENTRY_DSN=

# ============================================
# CORS CONFIGURATION (Production)
# ============================================
# Comma-separated list of allowed origins
# CORS_ORIGINS=https://your-domain.com,https://another-domain.com

# ============================================
# RATE LIMITING (Optional)
# ============================================
# Enable rate limiting (True/False)
# RATE_LIMIT_ENABLED=True
# Rate limit per minute
# RATE_LIMIT_PER_MINUTE=100

# ============================================
# PRODUCTION SETTINGS
# ============================================
# Environment name (development/staging/production)
ENVIRONMENT=development

# Enable HTTPS only (production)
# REQUIRE_HTTPS=False

# Session timeout (minutes)
# SESSION_TIMEOUT=30
